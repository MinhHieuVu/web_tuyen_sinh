<header id="header" class="header left-aligned-navbar ">
   <div class="header-section">
      <div id="logoAndNav" class="container">
         <nav class="navbar navbar-expand-lg">
            <%= link_to root_path, class: 'navbar-brand mr-5' do %>
               <%= image_tag 'img.png', height: 55, alt: "Tuyen sinh" %>
            <% end %>
            <li class="nav-home nav-item active">
               <p><i class="fas fa-home me-3"></i> <%= link_to "Trang Chủ", root_path, class: "nav-home" %></p>

            </li>

            <div id="navBar" class="collapse navbar-collapse ">
               <ul class="navbar-nav">
                  <% if user_signed_in? %>
                     <div class="dropdown navbar-nav-last-item">
                        <a><%= fa_icon("user") %> . <%= current_user.name %> <i class="fa-solid fa-caret-down"></i></a>
                        <div class="dropdown-content ">
                           <div>
                              <a class="dropdown-item" href="<%= user_path(current_user) %>"> Tài khoản </a>
                              <% if current_user.admin? %>
                                 <%= link_to "Quản lý TT", admin_dashboard_index_path, class: "dropdown-item" %>
                              <% end %>
                              <%= link_to "Đăng xuất", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                           </div>
                        </div>
                     </div>

                  <% else %>
                     <li class="navbar-nav-last-item">
                        <%= link_to "Đăng ký", new_user_registration_path, class: "btn btn-sm btn-outline-primary transition-3d-hover" %>
                        <%= link_to "Đăng nhập", new_user_session_path, class: "btn btn-sm btn-primary transition-3d-hover" %>
                     </li>
                  <% end %>
               </ul>
            </div>
         </nav>

      </div>
   </div>
</header>
