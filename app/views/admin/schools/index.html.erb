<nav aria-label="breadcrumb" class="mt-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Trang chủ", root_path %></li>
    <li class="breadcrumb-item active" aria-current="page">DS Trường Đại Học</li>
  </ol>
</nav>

<div class="card">
  <h5 class="card-header">
    Danh sách Trường Đại Học
  </h5>
  <div class="card-body">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Code</th>
        <th scope="col">Name</th>
        <th scope="col">Địa Chi</th>
      </tr>
      </thead>
      <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= link_to school.id, admin_school_path(school) %></td>
          <td><%= link_to school.code, admin_school_path(school) %></td>
          <td><%= link_to school.name, admin_school_path(school) %></td>
          <td><%= link_to school.address, admin_school_path(school) %></td>
          <td>
            <%= link_to ' Sửa', edit_admin_school_path(school) ,class: "btn btn-info float-right ml-2"%>
            <%= link_to 'Xoá', admin_school_path(school), method: :delete, data: {confirm: "Are you sure?"} ,class: "btn btn-danger float-right ml-2"%>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to "Thêm mới", new_admin_school_path, class: "btn btn-primary" %>
  </div>
</div>