<%= form_with(model: [:admin , school_info] , local: true) do |form| %>
  <% if school_info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(school_info.errors.count, "error") %> prohibited this Test from being saved:</h2>

      <ul>
        <% school_info.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">

      <div class="row form-group">
        <%= form.label 'Năm Tuyển Sinh', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :year, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Đối Tượng Tuyển Sinh', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :objective, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Phạm Vi Tuyển Sinh', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :scope, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Phương Thức Tuyển Sinh', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :method, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Chỉ Tiêu Tuyển Sinh', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :criteria, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Ngưỡng Đảm Bảo Chất Lượng Đầu Vào ', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :threshold, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Các thông tin cần thiết khác', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :info, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Tổ chức tuyển sinh', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :incorporation, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Chính sách ưu tiên', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :policy, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Lệ phí xét tuyển', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :fees, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Học phí dự kiến', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :tuition, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>



      <div class="form-group row">
        <%= form.label 'Thuộc Trường Học', class: 'col-lg-2 col-form-label' %>
        <div class="col-lg-8">
          <%= form.select :school_id, options_for_select(School.all.collect{|type| [type.name, type.id]}, @school_info.school ? @school_info.school.id : ""), {include_blank: "-- Vui lòng chọn thuộc trường học--"}, class: "form-control select2" %>
        </div>
      </div>


      <div class="d-flex justify-content-end">
        <%= form.submit "Save changes", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
