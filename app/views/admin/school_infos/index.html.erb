<nav aria-label="breadcrumb" class="mt-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Trang chủ", root_path %></li>
    <li class="breadcrumb-item active" aria-current="page">DS Thông Tin Trường Đại Học</li>
  </ol>
</nav>

<div class="card">
  <h5 class="card-header">
    Danh sách Thông Tin Trường Đại Học
  </h5>
  <div class="card-body">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Năm</th>
        <th scope="col">Đối Tượng</th>
        <th scope="col">Phạm vi</th>
      </tr>
      </thead>
      <tbody>
      <% @school_infos.each do |school_info| %>
        <tr>
          <td><%= link_to school_info.id, admin_school_info_path(school_info) %></td>
          <td><%= link_to school_info.objective, admin_school_info_path(school_info) %></td>
          <td><%= link_to school_info.scope, admin_school_info_path(school_info) %></td>
          <td><%= link_to school_info.method, admin_school_info_path(school_info) %></td>
          <td>
            <%= link_to ' Sửa', edit_admin_school_info_path(school_info) ,class: "btn btn-info float-right ml-2"%>
            <%= link_to 'Xoá', admin_school_infos_path(school_info), method: :delete, data: {confirm: "Are you sure?"} ,class: "btn btn-danger float-right ml-2"%>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to "Thêm mới", new_admin_school_info_path, class: "btn btn-primary" %>
  </div>
</div>