<%= form_with(model: [:admin , province] , local: true ) do |form| %>
  <% if province.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(province.errors.count, "error") %> prohibited this Test from being saved:</h2>

      <ul>
        <% province.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">

      <div class="row form-group">
        <%= form.label 'Tên Tỉnh Thành', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Mô tả', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.rich_text_area :description, class: "form-control action-text", placeholder: "Please input name", required: true %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label 'Khu Vực', class: 'col-lg-2 col-form-label' %>
        <div class="col-lg-8">
          <%= form.select :area_id, options_for_select(Area.all.collect{|type| [type.name, type.id]}, @province.area ? @province.area.id : ""), {include_blank: "-- Vui lòng chọn kiểu khu vực --"}, class: "form-control select2" %>
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <%= form.submit "Save changes", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
<style>
    .action-text {
        min-height: 400px;
        height: auto;
    }
</style>
