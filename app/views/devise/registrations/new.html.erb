<div class="d-flex justify-content-center">
  <div class="card card-frame login-card" style="width: 450px">
    <div class="card-body">

      <h3 class="card-title">Đăng ký sử dụng</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <br><br>

        <div class="form-group">
          <%= f.label "Email", class: "label-text" %><span style="color: red;">*</span><br/>
          <%= f.email_field :email, class: "form-control", placeholder: "Nhập địa chỉ thư điện tử của bạn", required: true %>
        </div>

        <div class="form-row">
          <div class="col">
            <%= f.label "Mật khẩu" %><span style="color: red;">*</span>
            <% if @minimum_password_length %>
              <em>(ít nhất <%= @minimum_password_length %> ký tự)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Nhập mật khẩu", class: "form-control", required: true %>
          </div>
          <div class="col">
            <%= f.label "Xác nhận mật khẩu" %><span style="color: red;">*</span>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Xác nhận mật khẩu", class: "form-control", required: true %>
          </div>
        </div>

        <br>
        <br>
        <div class="actions text-center">
          <%= f.submit "Đăng ký", class: "btn btn-info" %>
        </div>
      <% end %>

    </div>
  </div>
</div>