<%= form_with(model: school) do |form| %>
  <% if school.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(school.errors.count, "error") %> prohibited this Test from being saved:</h2>

      <ul>
        <% school.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">

      <div class="row form-group">
        <%= form.label 'Mã Trường', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :code, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Tên Trường', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Địa Chỉ', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :address, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Loại Hình', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :school_type, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Số Điện Thoại', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :phone, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label 'Link website', class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :website, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label 'Khu Vực', class: 'col-lg-2 col-form-label' %>
        <div class="col-lg-8">
          <%= form.select :area_id, options_for_select(Area.all.collect{|type| [type.name, type.id]}, @school.area ? @school.area.id : ""), {include_blank: "-- Vui lòng chọn kiểu khu vực --"}, class: "form-control select2" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label 'Thuộc Thành Phố', class: 'col-lg-2 col-form-label' %>
        <div class="col-lg-8">
          <%= form.select :province_id, options_for_select(Province.all.collect{|type| [type.name, type.id]}, @school.province ? @school.province.id : ""), {include_blank: "-- Vui lòng chọn thuộc thành phố --"}, class: "form-control select2" %>
        </div>
      </div>


      <div class="d-flex justify-content-end">
        <%= form.submit "Save changes", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
